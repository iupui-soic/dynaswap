<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
 
    <!--
    	See http://wiki.openmrs.org/display/docs/Module+liquibase+File for 
    	documentation on this file.
    
        See http://www.liquibase.org/manual/home#available_database_refactorings
        for a list of supported elements and attributes
    -->
 
 	<!-- Uncomment the changeset below if you want to make the Item class persistable, see also Item and DynaSWAPBaseModuleDaoTest -->
	<changeSet id="dynaswap-2019-06-02-12-22" author="tyler">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="dynaswap_users"/></not>
		</preConditions>
		<comment>
			Creating the dynaswap_item table
		</comment>
		<createTable tableName="dynaswap_users">
		    <column autoIncrement="true" name="face_authentication_id" type="int" >
		        <constraints nullable="false" primaryKey="true" primaryKeyName="face_authentication_id"/>
                    </column>
		    <column name="dynaswap_user_id" type="int" />
		    <column name="role" type="varchar(50)" />
		    <column name="bio_capsule" type="mediumblob" />
                    <column name="classifier" type="mediumblob"/>
                    <column name="created_on" type="datetime"/>
		    <column name="last_authenticated" type="datetime"/>
		</createTable>
		<addForeignKeyConstraint constraintName="dynaswap_user_fk"
						         baseTableName="dynaswap_users"
						         baseColumnNames="dynaswap_user_id"
						         referencedTableName="users"
						         referencedColumnNames="user_id" />
        </changeSet>
	<changeSet id="dynaswap-2019-06-02-16-22" author="tyler">
		<addForeignKeyConstraint constraintName="dynaswap_role_fk"
								 baseTableName="dynaswap_users"
								 baseColumnNames="role"
								 referencedTableName="role"
								 referencedColumnNames="role" />
		<addColumn tableName="role">
			<column name="url" type="varchar(255)"></column>
			<column name="feature" type="mediumblob"></column>
		</addColumn>
	</changeSet>

	<changeSet id="dynaswap-2020-11-6-1" author="brandon">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="cryptnode"/></not>
		</preConditions>
		<comment>
			Creating table for cryptographic nodes.
		</comment>
		<createTable tableName="cryptnode">
			<column autoIncrement="true" name="id" type="int">
				<constraints nullable="false" primaryKey="true" primaryKeyName="id" />
			</column>
			<column name="name" type="varchar(50)" />
			<column name="label" type="varchar(64)" />
			<column name="secret" type="varchar(64)" />
		</createTable>
	</changeSet>

	<changeSet id="dynaswap-2020-11-6-2" author="brandon">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="cryptedge"/></not>
		</preConditions>
		<comment>
			Creating table for cryptographic edges.
		</comment>
		<createTable tableName="cryptedge">
			<column autoIncrement="true" name="id" type="int">
				<constraints nullable="false" primaryKey="true" primaryKeyName="id" />
			</column>
			<column name="r_ij" type="varchar(64)" />
			<column name="y_ij" type="varchar(500)" />
			<column name="parent_id" type="varchar(50)" />
			<column name="child_id" type="varchar(50)" />
		</createTable>
	</changeSet>

	<changeSet id="dynaswap-2020-11-6-3" author="brandon">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="cryptnode_cryptedge"/></not>
		</preConditions>
		<comment>
			Creating mapping table between cryptographic nodes and edges.
		</comment>
		<createTable tableName="cryptnode_cryptedge">
			<column name="cryptnode_id" type="int">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_cryptnode_cryptedge" />
			</column>
			<column name="cryptedge_id" type="int">
				<constraints nullable="false" primaryKey="true" primaryKeyName="PK_cryptnode_cryptedge" />
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>
